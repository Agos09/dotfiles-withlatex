#===[ GENERAL SETTINGS ]====================#

# Mod key is the "Super" key (or Meta, usually has the Windows logo on it)
set $mod Mod4
set $term alacritty
font pango:DejaVu Sans Mono 10

#===[ KEY BINDINGS ]====================#

#---( focus )---#

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

#---( moving / splitting / layout)---#

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# split in horizontal orientation g because h is used - vimkeys are needed
bindsym $mod+g split h

# split in vertical orientation
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen

# split
bindsym $mod+t layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+plus floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# scratchpad
bindsym $mod+Shift+minus move scratchpad
bindsym $mod+Tab scratchpad show

# kill focused window
bindsym $mod+q kill

#---( workspaces )---#

# switch to workspace
bindsym $mod+1 workspace 1
bindsym $mod+2 workspace 2
bindsym $mod+3 workspace 3
bindsym $mod+4 workspace 4
bindsym $mod+5 workspace 5
bindsym $mod+6 workspace 6
bindsym $mod+7 workspace 7
bindsym $mod+8 workspace 8
bindsym $mod+9 workspace 9
bindsym $mod+0 workspace 10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace 1
bindsym $mod+Shift+2 move container to workspace 2
bindsym $mod+Shift+3 move container to workspace 3
bindsym $mod+Shift+4 move container to workspace 4
bindsym $mod+Shift+5 move container to workspace 5
bindsym $mod+Shift+6 move container to workspace 6
bindsym $mod+Shift+7 move container to workspace 7
bindsym $mod+Shift+8 move container to workspace 8
bindsym $mod+Shift+9 move container to workspace 9
bindsym $mod+Shift+0 move container to workspace 10

#---( modes )---#

# resize window (you can also use the mouse for that)
mode "resize" {
    # These bindings trigger as soon as you enter the resize mode
    bindsym h resize shrink width 10 px or 10 ppt
    bindsym j resize grow height 10 px or 10 ppt
    bindsym k resize shrink height 10 px or 10 ppt
    bindsym l resize grow width 10 px or 10 ppt

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# credit to u/vikarjramun
mode "swap" {
    # switch to workspace
    bindsym $mod+1 workspace $ws1
    bindsym $mod+2 workspace $ws2
    bindsym $mod+3 workspace $ws3
    bindsym $mod+4 workspace $ws4
    bindsym $mod+5 workspace $ws5
    bindsym $mod+6 workspace $ws6
    bindsym $mod+7 workspace $ws7
    bindsym $mod+8 workspace $ws8
    bindsym $mod+9 workspace $ws9
    bindsym $mod+0 workspace $ws10

    # change focus (without mod)
    bindsym h focus left
    bindsym j focus down
    bindsym k focus up
    bindsym l focus right

    bindsym Return swap container with mark "swapee"; unmark "swapee"; mode "default";
    bindsym Escape unmark "swapee"; mode "default";
}

bindsym $mod+Shift+s mark --add "swapee"; mode "swap"


set $Locker betterlockscreen -l dim && sleep 1
set $mode_system System (l) lock, (e) logout, (s) suspend, (r) reboot, (Shift+s) shutdown

mode "$mode_system" {
    bindsym l exec --no-startup-id $Locker, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym s exec --no-startup-id systemctl suspend, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym Shift+s exec --no-startup-id systemctl poweroff -i, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+grave mode "$mode_system"

#---( i2 stuff )---#

# reload the configuration file
bindsym $mod+Shift+i reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

#---( direct launchers )---#


bindsym $mod+Return exec $term
bindsym $mod+F1 exec $term -e ranger
bindsym $mod+Shift+F2 exec firefox
bindsym $mod+Shift+F3 exec discord
bindsym $mod+Shift+F5 exec $term -e neomutt
bindsym $mod+Shift+F6 exec $term -e Stuy.py
bindsym $mod+e exec pcmanfm

# start application launchers
bindsym $mod+x exec --no-startup-id rofi -show combi -theme flat-orange -show-icons -icon-theme "Papirus"

# flameshot
bindsym Control+Shift+c exec flameshot gui -p ~/Pictures/Screenshots

# polybar
bindsym $mod+period exec --no-startup-id polybar-msg cmd toggle

# demnuunicode - emojis
bindsym $mod+Shift+period exec dmenuunicode

# lock system
bindsym $mod+semicolon exec betterlockscreen -l dim

#---( gaps )---#

# basic settings
gaps inner 10
gaps outer 10

bindsym $mod+z          gaps inner current set 0; gaps outer current set 0
bindsym $mod+Shift+z    gaps inner current set 10; gaps outer current set 10

bindsym $mod+w          gaps outer current plus 5
bindsym $mod+Shift+w    gaps outer current minus 5

bindsym $mod+o          gaps inner current plus 5
bindsym $mod+Shift+o    gaps inner current minus 5

#----------[ MISC SETTINGS ]----------#

# Pressing $mod and current workspace number takes you back to the previousle active workspace
workspace_auto_back_and_forth yes

# audio
bindsym XF86AudioMute        exec --no-startup-id pactl set-sink-mute 0 toggle
bindsym XF86AudioLowerVolume exec --no-startup-id pactl -- set-sink-volume 0 -5%
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl -- set-sink-volume 0 +5%

# brightness
set $brightnessmsg notify-send -t 1000 -h string:x-canonical-private-synchronous:anything 'Brightness ïƒ«' "Brightness: $(brightnessctl get) out of $(brightnessctl max)"
bindsym XF86MonBrightnessUp exec brightnessctl set +5%;exec $brightnessmsg
bindsym XF86MonBrightnessDown exec brightnessctl set 5%-;exec $brightnessmsg

# media keys
bindsym XF86AudioNext exec --no-startup-id mpc next
bindsym XF86AudioPlay exec --no-startup-id mpc toggle
bindsym XF86AudioPrev exec --no-startup-id mpc prev

#---( startup items )---#

exec_always --no-startup-id setxkbmap -option caps:escape
exec_always --no-startup-id $XDG_CONFIG_HOME/polybar/launch.sh
exec_always --no-startup-id picom -b -c
exec_always --no-startup-id xwallpaper --zoom ~/Pictures/Wallpapers/alena-aenami-sundown.jpg

# only exec once at startup
exec --no-startup-id /usr/lib/kdeconnectd
exec --no-startup-id /usr/lib/geoclue-2.0/demos/agent
exec --no-startup-id redshift-gtk
exec --no-startup-id firefox
exec --no-startup-id ibus-daemon -drx
exec --no-startup-id flameshot &
exec --no-startup-id xautolock -time 6 -locker 'betterlockscreen -l dim' -detectsleep

#---( colors table )---#

# cOne is color one and cTwo is colorTwo
set $cOne #dfaf87
set $cTwo #1d2021

# colour of border, background, text, indicator, and child_border
client.focused          $cOne $cTwo $cOne $cOne $cOne
client.focused_inactive $cTwo $cTwo $cOne $cTwo $cTwo
client.unfocused        $cTwo $cTwo $cOne $cTwo $cTwo
client.urgent           $cTwo $cTwo $cOne $cTwo $cTwo
client.placeholder      $cTwo $cTwo $cOne $cTwo $cTwo
client.background       $cTwo

#---( windows rules )---#

for_window [class="^.*"] border pixel 3
for_window [class="jetbrains-.*" title="win0"] floating enable border none
for_window [class="java-lang-Thread" title="win0"] floating enable border none

# Float by name
for_window [title="Install user style"] floating enable

# Float by type
for_window [instance="fontpreview"] floating enable
for_window [window_role="pop-up"] floating enable
for_window [window_role="task_dialog"] floating enable
for_window [window_type="dialog"] floating enable
for_window [window_type="menu"] floating enable
for_window [window_role="task_dialog"] floating enable

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

#---( focus related )---)
focus_follows_mouse no

no_focus [window_role="pop-up"]
no_focus [window_type="notification"]
focus_on_window_activation none
